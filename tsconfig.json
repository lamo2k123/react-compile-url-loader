{
    "compilerOptions": {
        "lib": ["es2022"],
        "module": "commonjs",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "nodenext",
        "rootDir": "./src",
        "outDir": "dist",
        "declarationDir": "dist/types"
    },
    "include": [
        "src"
    ]
}
